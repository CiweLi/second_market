<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.CollectMapper">
    <insert id="insert">
        insert into collect (user_id,goods_id)
        values(#{userId},#{goodsId})
    </insert>

    <delete id="deleteById">
        delete from collect
        where  id = #{id}
    </delete>

    <update id="update" parameterType="com.example.springboot.entity.Collect">
        update collect
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectAll" resultType="com.example.springboot.entity.Collect">
         select collect.*,goods.pic as pic,goods.price as price,goods.name as name,goods.shelve as shelve
         from collect
         left join goods on goods.id=collect.goods_id
         <where>
             <if test="userId != null">
                 and collect.user_id = #{userId}
             </if>
             <if test="goodsId != null">
                 and collect.goods_id = #{goodsId}
             </if>
             <if test="name != null and name != ''">
                 and goods.name like concat('%', #{name}, '%')
             </if>
         </where>
    </select>

</mapper>