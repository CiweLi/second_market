<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.OrderMapper">
    <insert id="insert">
        insert into `order` (user_id,seller_id,time,state,goods_id,address)
        values(#{userId},#{sellerId},#{time},#{state},#{goodsId},#{address})
    </insert>

    <delete id="deleteById">
        delete from `order`
        where  id = #{id}
    </delete>

    <update id="update" parameterType="com.example.springboot.entity.Order">
        update `order`
        <set>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectAll" resultType="com.example.springboot.entity.Order">
        select `order`.*,user.name as username,s.name as sellerName,user.avatar as userAvatar,s.avatar as sellerAvatar,
               goods.name as goodsName,goods.pic as pic,goods.price as price
        from `order` left join user on user.id=`order`.user_id
        left join goods on goods.id=`order`.goods_id
        left join user as s on s.id=`order`.seller_id
        <where>
            <if test="userId != null">
                and `order`.user_id = #{userId}
            </if>
            <if test="sellerId != null">
                and `order`.seller_id = #{sellerId}
            </if>
            <if test="goodsName != null and goodsName != ''">
                and goods.name like concat('%', #{goodsName}, '%')
            </if>
        </where>
    </select>

</mapper>